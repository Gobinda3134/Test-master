<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/large"
    android:background="@color/bg"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:id="@+id/content_main">


    <LinearLayout
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="@integer/one"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="@integer/one"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/training_layout"
            android:background="@color/first">


            <ImageView
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:src="@drawable/gallery"
                android:id="@+id/training_image"
                android:tint="@color/white"
                android:focusable="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:clickable="false"
                android:text="Gallery"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one"
            android:background="@color/line"
            />

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="@integer/one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/notice_layout"
            android:background="@color/third"
            >
            <ImageView
                android:id="@+id/notice_image"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/assignment"
                android:tint="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="Assignment"
                android:clickable="false"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one"
            android:background="@color/line"
            />

        <LinearLayout
            android:gravity="center"
            android:layout_weight="@integer/one"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/news_layout"
            android:background="@color/red">

            <ImageView
                android:id="@+id/news_image"
                android:clickable="true"

                android:src="@drawable/notices"
                android:tint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="Notice"
                android:clickable="false"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/one"
        android:layout_height="match_parent"
        android:background="@color/line"
        />

    <LinearLayout
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="@integer/one"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="@integer/one"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gallery_layout"
            android:background="@color/blue">

            <ImageView
                android:id="@+id/gallery_image"
                android:clickable="true"
                android:src="@drawable/course"
                android:layout_width="wrap_content"
                android:tint="@color/white"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="Course"
                android:clickable="false"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one"
            android:background="@color/line"
            />

        <LinearLayout
            android:gravity="center"
            android:layout_weight="@integer/one"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/library_layout"
            android:background="@color/green">

            <ImageView
                android:id="@+id/library_image"
                android:clickable="true"
                android:src="@drawable/routine"
                android:tint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="Routine"
                android:clickable="false"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one"
            android:background="@color/line"
            />

        <LinearLayout
            android:gravity="center"
            android:layout_weight="@integer/one"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/events_layout"
            android:background="@color/last">

            <ImageView
                android:id="@+id/events_image"
                android:clickable="true"
                android:src="@drawable/ic_events"
                android:layout_width="wrap_content"
                android:tint="@color/white"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="News and Events"
                android:clickable="false"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
