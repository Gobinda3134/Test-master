<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8sp"
    android:layout_marginRight="8sp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="@color/blue"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/assn_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="18sp"
                android:layout_marginTop="1dp"
                android:text="test"
                android:layout_toRightOf="@+id/name"
                android:layout_toEndOf="@+id/name"
                />



            <TextView
                android:id="@+id/deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="Deadline:"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_below="@+id/name"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/ass_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/name"
                android:text="44444444444"
                android:layout_toRightOf="@+id/deadline"
                android:layout_toEndOf="@+id/deadline"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="Cycle:"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/deadline"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ass_cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_below="@+id/deadline"
                android:text="222222"
                android:layout_toRightOf="@+id/deadline"
                android:layout_toEndOf="@id/deadline"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ass_cycle">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:textSize="18dp"
                    android:drawableLeft="@drawable/ic_view"
                    android:drawableStart="@drawable/ic_view"
                    android:drawablePadding="5dp"
                    android:id="@+id/btnView"
                    android:textColor="@color/blue"
                    android:padding="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download"
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:drawableLeft="@drawable/ic_download"
                    android:drawableStart="@drawable/ic_download"
                    android:drawablePadding="5dp"
                    android:padding="15dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/btnDownload"
                    />

            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>
